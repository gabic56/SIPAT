  { campo: "grau_parentesco_cancer", texto: "E qual o grau de parentesco?", opcoes: ["Pai/M√£e","Irm√£o/Irm√£","Av√¥/Av√≥","Tio/Tia","Filho/Filha"], condicao: { campo: "historico_cancer", valor: "Sim" }, multi: true },

